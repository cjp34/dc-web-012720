<!DOCTYPE html>
<html>
  <head>
    <title>SnackTracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <% if session[:user_id] %>
        <h4>Welcome 
          <%= current_user.username %>
        </h4>
        <span><%= link_to "Logout", logout_path %></span>
      <% else %>
        <%= link_to "Login", login_path %>
      <% end %>
    </div>

    <% if flash[:login_warning] %>
      <div class="notice"><%= flash[:login_warning] %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
