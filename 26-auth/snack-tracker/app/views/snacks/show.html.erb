<h1>Detail page</h1>

<div><%= @snack.name %></div>

<div>Calories: <%= @snack.calories %></div>
<div>Deliciousness: <%= @snack.deliciousness %></div>
<% if @snack.retailer %>
    <div>Made by <%= @snack.retailer.name %></div>
<% end  %>
<%= link_to "Edit this snack", edit_snack_path %>
<%= link_to "Back To Index Page", snacks_path %>

<%= form_tag(snack_path(@snack), method: :delete) do %>
  <div>
    <%= submit_tag 'Delete this snack' %>
  </div>
<% end %>